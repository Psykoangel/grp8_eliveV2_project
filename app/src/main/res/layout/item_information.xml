<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/iron"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile_picture_unknown"
        />
    <TextView
        android:id="@+id/nomlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:hint="@string/nom"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />
    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="@string/nom"
        android:textColor="@android:color/black"
        android:layout_below="@+id/nomlabel"
        android:layout_alignLeft="@+id/nomlabel"
        android:layout_alignStart="@+id/nomlabel" />


    <TextView
        android:id="@+id/prenomlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:hint="@string/prenom"
        android:textColor="@android:color/black"
        android:layout_above="@+id/prenom"
        android:layout_alignLeft="@+id/nom"
        android:layout_alignStart="@+id/nom" />
    <TextView
        android:id="@+id/prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="@string/prenom"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/avatar"
        android:layout_alignLeft="@+id/prenomlabel"
        android:layout_alignStart="@+id/prenomlabel"
        android:layout_marginBottom="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/adress"
        android:id="@+id/adresselabel"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/adress"
        android:id="@+id/adresse"
        android:textColor="@android:color/black"
        android:layout_below="@+id/adresselabel"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="@string/pere"
        android:id="@+id/perelabel"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/mere"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:hint="@string/pere"
        android:id="@+id/pere"
        android:layout_below="@+id/perelabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:hint="@string/mere"
        android:id="@+id/merelabel"
        android:layout_below="@+id/adresse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:hint="@string/mere"
        android:id="@+id/mere"
        android:layout_below="@+id/merelabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:hint="Groupe sanguin :"
        android:id="@+id/groupe_sanguinlabel"
        android:textStyle="bold"
        android:layout_below="@+id/pere"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:hint="Groupe sanguin :"
        android:id="@+id/groupe_sanguin"
        android:layout_below="@+id/groupe_sanguinlabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>